<canvas id="click-effect-canvas" class="fixed inset-0 pointer-events-none z-[99999]"></canvas>

<script>
    // 封装为类以避免污染全局
    class ClickExplosion {
        canvas: HTMLCanvasElement;
        ctx: CanvasRenderingContext2D;
        particles: Particle[] = [];
        isRunning = false;

        constructor() {
            this.canvas = document.getElementById('click-effect-canvas') as HTMLCanvasElement;
            if (!this.canvas) return;
            
            this.ctx = this.canvas.getContext('2d')!;
            this.resize();
            
            window.addEventListener('resize', () => this.resize());
            document.addEventListener('click', (e) => this.explode(e.clientX, e.clientY));
            
            // 兼容 Astro 页面切换
            document.addEventListener('astro:page-load', () => {
                this.canvas = document.getElementById('click-effect-canvas') as HTMLCanvasElement;
                if(this.canvas) this.ctx = this.canvas.getContext('2d')!;
            });
        }

        resize() {
            this.canvas.width = window.innerWidth;
            this.canvas.height = window.innerHeight;
        }

        explode(x: number, y: number) {
            const colors = ['#FF1461', '#18FF92', '#5A87FF', '#FBF38C'];
            for (let i = 0; i < 30; i++) {
                this.particles.push(new Particle(x, y, colors[Math.floor(Math.random() * colors.length)]));
            }
            if (!this.isRunning) {
                this.update();
            }
        }

        update() {
            this.isRunning = true;
            this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
            
            this.particles.forEach((p, index) => {
                p.update();
                p.draw(this.ctx);
                if (p.life <= 0) {
                    this.particles.splice(index, 1);
                }
            });

            if (this.particles.length > 0) {
                requestAnimationFrame(() => this.update());
            } else {
                this.isRunning = false;
            }
        }
    }

    class Particle {
        x: number;
        y: number;
        color: string;
        radius: number;
        velocity: { x: number; y: number };
        life: number;

        constructor(x: number, y: number, color: string) {
            this.x = x;
            this.y = y;
            this.color = color;
            this.radius = Math.random() * 3 + 1.5; // 粒子大小
            const angle = Math.random() * Math.PI * 2;
            const speed = Math.random() * 2 + 1;
            this.velocity = {
                x: Math.cos(angle) * speed,
                y: Math.sin(angle) * speed
            };
            this.life = 1.5; // 生命值 1.0 -> 0
        }

        update() {
            this.x += this.velocity.x;
            this.y += this.velocity.y;
            this.velocity.y += 0.05; // 重力
            this.life -= 0.02; // 消失速度
            this.radius *= 0.96; // 变小
        }

        draw(ctx: CanvasRenderingContext2D) {
            ctx.globalAlpha = this.life;
            ctx.beginPath();
            ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
            ctx.fillStyle = this.color;
            ctx.fill();
            ctx.globalAlpha = 1;
        }
    }

    // 初始化
    // 使用 requestIdleCallback 确保不阻塞主线程加载
    if (typeof window !== 'undefined') {
        window.requestIdleCallback(() => {
            new ClickExplosion();
        });
    }
</script>