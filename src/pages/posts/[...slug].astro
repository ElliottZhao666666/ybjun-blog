export async function getStaticPaths() {
	const blogEntries = await getSortedPosts();
	const paths: {
		params: { slug: string };
		props: { entry: CollectionEntry<"posts"> };
	}[] = [];

	for (const entry of blogEntries) {
		// å°† id è½¬æ¢ä¸º slugï¼ˆç§»é™¤æ‰©å±•åï¼‰ä»¥åŒ¹é…è·¯ç”±å‚æ•°
		const slug = removeFileExtension(entry.id);
		// ä¸ºæ¯ç¯‡æ–‡ç« åˆ›å»ºé»˜è®¤çš„ slug è·¯å¾„
		paths.push({
			params: { slug },
			props: { entry },
		});
		// å¦‚æœæ–‡ç« æœ‰è‡ªå®šä¹‰å›ºå®šé“¾æ¥ï¼Œä¹Ÿåˆ›å»ºå¯¹åº”çš„è·¯å¾„
		if (entry.data.routeName) {
			// ç§»é™¤å¼€å¤´çš„æ–œæ å’Œç»“å°¾çš„æ–œæ 
			// åŒæ—¶ç§»é™¤å¯èƒ½çš„ "posts/" å‰ç¼€ï¼Œé¿å…é‡å¤
			let routeName = entry.data.routeName
				.replace(/^\/+/, "")
				.replace(/\/+$/, "");
			if (routeName.startsWith("posts/")) {
				routeName = routeName.replace(/^posts\//, "");
			}
			paths.push({
				params: { slug: routeName },
				props: { entry },
			});
		}
	}

	return paths;
}

