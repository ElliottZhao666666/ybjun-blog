---
import GridLayout from "@layouts/grid.astro";
import AlbumDetail from "@components/gallery/AlbumDetail.svelte";
import BackwardButton from "@components/backwardButton.astro";

const title = "相册详情";
---

<GridLayout title={title} description="查看相册详情">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-6 md:px-9 pt-6 pb-6 relative w-full text-neutral-900 dark:text-neutral-100 bg-[var(--card-bg)] transition-colors duration-300">
            <BackwardButton currentPath="/gallery/" />

            <div class="mt-4">
                <AlbumDetail client:only="svelte" />
            </div>
        </div>
    </div>
</GridLayout>