---
import AlbumList from "@components/gallery/AlbumList.svelte";
import GridLayout from "@layouts/grid.astro";

// 页面元数据
const title = "相册";
const description = "永远相信光影的力量是无限的。";
---

<GridLayout title={title} description={description}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-6 md:px-9 pt-6 pb-6 relative w-full text-neutral-900 dark:text-neutral-100 bg-[var(--card-bg)] transition-colors duration-300">
            <div class="mb-8">
                <div class="flex items-center gap-3 mb-2">
                    <h1 class="text-3xl md:text-4xl font-bold text-[var(--primary)]">
                        {title}
                    </h1>
                    <span class="px-3 py-1 text-xs font-bold text-[var(--primary)] bg-[var(--primary)]/10 rounded-full">
                        Gallery
                    </span>
                </div>
                <p class="text-neutral-500 dark:text-neutral-400 text-sm md:text-base">
                    {description}
                </p>
            </div>

            <hr class="border-dashed border-gray-200 dark:border-gray-700 mb-8">

            <AlbumList client:load />
        </div>
    </div>
</GridLayout>